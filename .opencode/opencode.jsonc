{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true,
    },
  },
  "agent": {
    "coderabbit:code-reviewer": {
      "mode": "primary",
      "description": "CodeRabbit Code Reviewer.",
      "permission": {
        "code-review": "allow",
        "edit": "deny",
        "websearch": "allow",
        "bash": "ask",
        "webfetch": "allow",
        "read": "allow",
      },
      "prompt": "{file:./prompts/code-reviewer.md}",
    },
  },
}
